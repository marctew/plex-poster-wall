{
  "name": "plex-poster-wall",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "server:dev": "npm --prefix server run dev",
    "client:dev": "npm --prefix client run dev -- --host",
    "dev": "concurrently -n SERVER,CLIENT -c green,cyan \"npm:server:dev\" \"npm:client:dev\"",
    "server:start": "npm --prefix server start",
    "client:build": "npm --prefix client run build"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
